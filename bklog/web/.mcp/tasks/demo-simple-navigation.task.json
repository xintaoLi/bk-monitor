{
  "$schema": "../schemas/runtime-task.schema.json",
  "id": "demo-simple-navigation",
  "intent": "演示简单的页面导航和基础交互",
  "context": {
    "component": "LogRetrieve",
    "route": "/retrieve",
    "version": "demo"
  },
  "preconditions": [],
  "steps": [
    {
      "type": "navigate",
      "url": "{{baseUrl}}/#/retrieve",
      "waitUntil": "networkidle2"
    },
    {
      "type": "wait",
      "selector": "body",
      "timeout": 10000,
      "state": "visible"
    },
    {
      "type": "wait",
      "timeout": 3000
    },
    {
      "type": "evaluate",
      "script": "() => { console.log('Demo: 页面已加载', document.title); return true; }"
    }
  ],
  "signals": [
    {
      "type": "dom-visible",
      "selector": "body",
      "timeout": 15000
    }
  ],
  "metadata": {
    "priority": "low",
    "tags": ["demo", "simple"],
    "estimatedDuration": 15000,
    "retryable": true
  }
}
