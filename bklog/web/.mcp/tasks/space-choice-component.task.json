    {
      "type": "navigate",
      "url": "{{baseUrl}}/#/retrieve",
      "waitUntil": "networkidle2"
    },
    {
      "type": "wait",
      "selector": ".biz-menu-select",
      "timeout": 10000,
      "state": "visible"
    },
    {
      "type": "click",
      "selector": ".menu-select-name",
      "timeout": 5000
    },
    {
      "type": "wait",
      "timeout": 500
    },
    {
      "type": "wait",
      "selector": ".menu-select-list",
      "timeout": 5000,
      "state": "visible"
    },
    {
      "type": "type",
      "selector": ".menu-select-search input",
      "text": "测试",
      "timeout": 5000
    },
    {
      "type": "wait",
      "timeout": 1000
    }
  ]
}